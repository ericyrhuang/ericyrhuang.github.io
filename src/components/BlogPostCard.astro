---
export interface Props {
  title: string;
  slug: string;
  date: Date;
  description?: string;
  category: 'Technical' | 'Essay' | 'Lists' | 'Updates' | 'Miscellaneous';
}

const { title, slug, date, description, category } = Astro.props;

import { formatDate } from '@/utils/dateFormatter';
---

<article class="mb-2">
  <a href={`/blog/${slug}`} class="group block -mx-3 rounded-lg px-3 py-2 transition-colors hover:bg-neutral-100">
    <div class="flex flex-col space-x-4 sm:flex-row sm:items-baseline">
      <time class="text-sm text-neutral-500 sm:min-w-[120px]">
        {formatDate(date)}
      </time>
      <div class="flex-1">
        <div class="flex items-baseline gap-2">
          <h3
            class="text-lg font-medium text-black transition-all group-hover:underline"
          >
            {title}
          </h3>
          <span class="text-xs text-neutral-400">
            {category}
          </span>
        </div>
        {description && <p class="mt-1 text-neutral-600">{description}</p>}
      </div>
    </div>
  </a>
</article>
