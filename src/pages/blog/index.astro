---
import { getCollection } from 'astro:content';
import BaseLayout from '@/layouts/BaseLayout.astro';
import BlogPostCard from '@/components/BlogPostCard.astro';

// Get all blog posts, filter drafts, sort by date (newest first)
const allPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

const sortedPosts = allPosts.sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
---

<BaseLayout
  title="Blog - Eric Huang"
  description="Thoughts on technology, ideas, and other topics."
>
  <section class="layout-container">
    <h2 class="heading-2">Blog Posts</h2>

    <div class="space-y-4">
      {
        sortedPosts.map((post) => (
          <BlogPostCard
            title={post.data.title}
            slug={post.slug}
            date={post.data.date}
            description={post.data.description}
            category={post.data.category}
          />
        ))
      }
    </div>

    {
      sortedPosts.length === 0 && (
        <p class="italic text-neutral-500">No posts yet. Check back soon!</p>
      )
    }
  </section>
</BaseLayout>
